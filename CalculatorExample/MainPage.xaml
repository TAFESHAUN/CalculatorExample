<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorExample.MainPage">

    <VerticalStackLayout Padding="20" Spacing="10">
        <!-- Result Label -->
        <Label Text="Result:" FontSize="24"/>
        <Label x:Name="ResultLabel" Text="0" FontSize="24" />

        <!-- First Number Entry -->
        <Label Text="First Number:" />
        <Entry x:Name="FirstNumberEntry" Keyboard="Numeric"/>

        <!-- Operator Entry 1 -->
        <Label Text="Operator 1:" />
        <Entry x:Name="OperatorEntry1"/>

        <!-- Operator Entry 2 -->
        <Label Text="Operator 2:" />
        <Entry x:Name="OperatorEntry2"/>

        <!-- Second Number Entry -->
        <Label Text="Second Number:" />
        <Entry x:Name="SecondNumberEntry" Keyboard="Numeric"/>

        <!-- Calculate Button -->
        <Button Text="Calculate" Clicked="OnCalculateClicked"/>
    </VerticalStackLayout>

</ContentPage>
